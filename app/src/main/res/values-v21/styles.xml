<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="RutgersTheme" parent="RutgersTheme.Base">
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <item name="android:windowAllowReturnTransitionOverlap">true</item>
        <item name="android:windowSharedElementEnterTransition">@android:transition/move</item>
        <item name="android:windowSharedElementExitTransition">@android:transition/move</item>
    </style>

    <style name="RutgersTheme.Pref" parent="android:Theme.Material.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/RutgersTheme.ActionBarTheme</item>
        <item name="android:colorPrimaryDark">@color/actbar_dark</item>
    </style>

    <style name="RutgersTheme.ActionBarTheme" parent="android:Widget.Material.ActionBar">
        <item name="android:background">@color/actbar_new</item>
    </style>
</resources>
