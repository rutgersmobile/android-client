<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false" android:state_enabled="false" android:state_focused="false">
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle">
            <solid android:color="#ffffff" />
            <corners android:radius="3dp" />
            <stroke android:width="5px" android:color="#999999" />
        </shape>
    </item>
    <item android:state_pressed="true" android:state_enabled="true" android:state_focused="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle">
            <solid android:color="#888" />
            <corners android:radius="3dp" />
            <stroke android:width="5px" android:color="#999" />
        </shape>
    </item>
</selector>